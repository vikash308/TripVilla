<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto my-10 max-w-4xl">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">

      <!-- Image -->
      <img src="<%= home.photo %>" alt="Image of <%= home.houseName %>" class="w-full h-96 object-cover">

      <!-- Content -->
      <div class="p-6">
        
        <!-- Title & Location -->
        <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= home.houseName %></h1>
        <p class="text-gray-600 flex items-center mb-4">
          <i class="fas fa-map-marker-alt text-red-500 mr-2"></i> <%= home.location %>
        </p>

        <!-- Price & Rating -->
        <div class="flex justify-between items-center mb-6">
          <span class="text-2xl font-bold text-red-500">₹<%= home.price.toLocaleString('en-IN') %> / night</span>
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-yellow-400 mr-1">
              <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 text-lg"><%= home.rating %></span>
          </div>
        </div>

        <!-- Description -->
        <div class="mb-6">
          <h2 class="text-xl font-semibold mb-2">Description</h2>
          <p class="text-gray-700 leading-relaxed"><%= home.description %></p>
        </div>

        <!-- Owner Info -->
        <div class="flex items-center bg-gray-50 rounded-lg p-4 mb-6 shadow-sm">
          <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Owner" class="w-12 h-12 rounded-full mr-4 border border-gray-300">
          <div>
            <p class="text-gray-700 text-lg font-semibold">Hosted by <%= name %></p>
            <p class="text-sm text-gray-500">Verified Host</p>
          </div>
        </div>

        <!-- Booking Button -->
        <button class="w-full bg-green-500 text-white text-lg font-semibold py-3 rounded-lg hover:bg-green-600 transition duration-300">
          Book Now
        </button>

        <!-- Review Section -->
        <div class="mt-10">
          <h2 class="text-2xl font-semibold mb-4">Reviews (<%= home.review ? home.review.length : 0 %>)</h2>

          <!-- Display Existing Reviews -->
          <div class="space-y-4 mb-6">
            <% if (home.review && home.review.length > 0) { %>
              <% home.review.forEach(review => { %>
                <div class="bg-gray-100 p-4 rounded-lg">
                  <div class="flex items-center mb-2">
                    <!-- Stars -->
                    <% for (let i = 1; i <= 5; i++) { %>
                      <% if (i <= review.rating) { %>
                        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.707 1.48 8.265L12 18.896 4.584 23.278l1.48-8.265L0 9.306l8.332-1.151z"/>
                        </svg>
                      <% } else { %>
                        <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.707 1.48 8.265L12 18.896 4.584 23.278l1.48-8.265L0 9.306l8.332-1.151z"/>
                        </svg>
                      <% } %>
                    <% } %>
                  </div>
                  <p class="text-gray-700 text-sm mb-1"><%= review.comment %></p>
                  <span class="text-xs text-gray-500">- <%= review.name %></span>
                </div>

              <% }) %>
            <% } else { %>
              <p class="text-gray-500">No reviews yet. Be the first to review!</p>
            <% } %>
          </div>

          <!-- Review Form -->
          <form action="/homes/review/<%= home._id %>" method="POST" class="bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-semibold mb-4">Leave a Review</h3>
            <div class="mb-4">
              <label for="rating" class="block text-gray-700 mb-2">Rating</label>
              <select id="rating" name="rating" class="w-full border rounded-lg px-4 py-2" required>
                <option value="5">★★★★★ (5)</option>
                <option value="4">★★★★ (4)</option>
                <option value="3">★★★ (3)</option>
                <option value="2">★★ (2)</option>
                <option value="1">★ (1)</option>
              </select>
            </div>
            <div class="mb-4">
              <label for="comment" class="block text-gray-700 mb-2">Comment</label>
              <textarea id="comment" name="comment" rows="3" class="w-full border rounded-lg px-4 py-2" required></textarea>
            </div>
            <button type="submit" class="w-full bg-green-500 text-white py-3 rounded-lg hover:bg-green-600 transition duration-300">
              Submit Review
            </button>
          </form>
        </div>

      </div>
    </div>
  </main>
</body>
</html>
